{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "moduleResolution": "Bundler",
    "module": "ES2020",
    "noEmit": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "composite": false,
    "declaration": false,
    "declarationMap": false,
    "target": "ESNext",
    "strict": true,
    "paths": {
      "@/assets/*": ["./assets/*"],
      "@/better-auth/*": ["./lib/*"],
      "@/*": ["./src/*"],
    }
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"],
  "include": ["**/*.ts", "**/*.tsx","./lib", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
